# ============================================
# CARBONINTELLIGENCE ENVIRONMENT VARIABLES
# ============================================
# This is a template file for environment variables
# Copy this file to .env and fill in your actual values
# ============================================

# ============================================
# REQUIRED - Database Configuration
# ============================================
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres

# ============================================
# REQUIRED - Supabase Configuration
# ============================================
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SECRET_KEY=your_supabase_service_role_key_here

# ============================================
# REQUIRED - Session Security
# ============================================
# Generate with: openssl rand -base64 32
SESSION_SECRET=your_random_session_secret_here

# ============================================
# OPTIONAL - AI Services
# ============================================
OPENAI_API_KEY=sk-your_openai_api_key_here

# ============================================
# OPTIONAL - CarbonConstruct API
# ============================================
CARBON_CONSTRUCT_API_KEY=your_carbon_construct_api_key
CARBON_CONSTRUCT_API_URL=https://api.carbonconstruct.io/v1

# ============================================
# OPTIONAL - Construction Software Integrations
# ============================================
PROCORE_API_KEY=your_procore_api_key
AUTODESK_API_KEY=your_autodesk_api_key
BLUEBEAM_API_KEY=your_bluebeam_api_key
PLANSWIFT_API_KEY=your_planswift_api_key
SAGE_API_KEY=your_sage_api_key

# ============================================
# DEVELOPMENT CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
